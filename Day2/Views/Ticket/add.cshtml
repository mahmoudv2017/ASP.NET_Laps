@using Day2.Models.View;
@using Day2.Models.Domain;
@model AddTicketVM;

@{
    var Tickets = ViewData["tickets"] as List<SelectListItem>;
}

<form asp-action="ADDTicket" method="post">

    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
    </div>

    <div class="form-group">
        <label asp-for="CreatedDate"></label>
        <input class="form-control" asp-for="CreatedDate" />
    </div>

    <div class="form-group">
        <label asp-for="IsClosed"></label>
        <input  asp-for="IsClosed" />
    </div>

    <select asp-for="Severity" asp-items="Html.GetEnumSelectList<Severity>()"></select>

    <button type="submit">Submite me</button>
</form>
